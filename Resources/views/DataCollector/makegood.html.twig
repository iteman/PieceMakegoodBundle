{% extends 'WebProfilerBundle:Profiler:layout.html.twig' %}

{% block head %}
  {{ parent() }}
  {% if panel is constant('Piece\\Bundle\\MakegoodBundle\\PieceMakegoodBundle::BUNDLE_ID') %}
  <link type="text/css" href="{{ asset('bundles/piecemakegood/vendor/jquery-ui/css/smoothness/jquery-ui-1.8.16.custom.css') }}" rel="Stylesheet" />
  <link type="text/css" href="{{ asset('bundles/piecemakegood/css/makegood.css') }}" rel="Stylesheet" />
  <script type="text/javascript" src="{{ asset('bundles/piecemakegood/vendor/joose/lib/Task/Joose/Core.js') }}"></script>
  <script type="text/javascript" src="{{ asset('bundles/piecemakegood/vendor/jquery-ui/js/jquery-1.6.2.min.js') }}"></script>
  <script type="text/javascript" src="{{ asset('bundles/piecemakegood/vendor/jquery-ui/js/jquery-ui-1.8.16.custom.min.js') }}"></script>
  <script type="text/javascript" src="{{ asset('bundles/piecemakegood/vendor/jsdeferred/jsdeferred.js') }}"></script>
  <script type="text/javascript" src="{{ asset('bundles/piecemakegood/vendor/base64/base64.js') }}"></script>
  <script type="text/javascript" src="{{ asset('bundles/piecemakegood/js/src/Piece/MakeGood/Core/Result/Result.js') }}"></script>
  <script type="text/javascript" src="{{ asset('bundles/piecemakegood/js/src/Piece/MakeGood/Core/Result/ResultType.js') }}"></script>
  <script type="text/javascript" src="{{ asset('bundles/piecemakegood/js/src/Piece/MakeGood/Core/Result/TestCaseResult.js') }}"></script>
  <script type="text/javascript" src="{{ asset('bundles/piecemakegood/js/src/Piece/MakeGood/Core/Result/TestSuiteResult.js') }}"></script>
  <script type="text/javascript" src="{{ asset('bundles/piecemakegood/js/src/Piece/MakeGood/Core/Run/Failures.js') }}"></script>
  <script type="text/javascript" src="{{ asset('bundles/piecemakegood/js/src/Piece/MakeGood/Core/Run/Progress.js') }}"></script>
  <script type="text/javascript" src="{{ asset('bundles/piecemakegood/js/src/Piece/MakeGood/Core/Run/ResultReader.js') }}"></script>
  <script type="text/javascript" src="{{ asset('bundles/piecemakegood/js/src/Piece/MakeGood/Launch/TestLifecycle.js') }}"></script>
  <script type="text/javascript" src="{{ asset('bundles/piecemakegood/js/src/Piece/MakeGood/UI/Configuration.js') }}"></script>
  <script type="text/javascript" src="{{ asset('bundles/piecemakegood/js/src/Piece/MakeGood/UI/Context.js') }}"></script>
  <script type="text/javascript" src="{{ asset('bundles/piecemakegood/js/src/Piece/MakeGood/UI/Widget/Counters.js') }}"></script>
  <script type="text/javascript" src="{{ asset('bundles/piecemakegood/js/src/Piece/MakeGood/UI/Widget/ProgressBar.js') }}"></script>
  <script type="text/javascript" src="{{ asset('bundles/piecemakegood/js/src/Piece/MakeGood/UI/View/ResultProjector.js') }}"></script>
  <script type="text/javascript" src="{{ asset('bundles/piecemakegood/js/src/Piece/MakeGood/UI/View/ResultView.js') }}"></script>
  <script type="text/javascript" src="{{ asset('bundles/piecemakegood/js/src/Piece/MakeGood/UI/View/ResultViewController.js') }}"></script>
  <style type="text/css">
#piecemakegood-progressbar {
  position:relative;
  height: 24px;
}
.piecemakegood-progressbar-label {
  position: absolute;
  width: 100%;
  text-align: center;
  line-height: 24px;
}
.piecemakegood-action-runalltests {
  background-image: url("{{ asset('bundles/piecemakegood/images/action_runalltests.png') }}") !important;
}
  </style>
  <script>
jQuery(function() {
    (new Piece.MakeGood.UI.Context()).create({
        assetBaseURI: "{{ asset('bundles/piecemakegood') }}",
        testRunURI: "{{ path('PieceMakegoodBundle_TestRun_run') }}"
    });
    jQuery("#piecemakegood-tabs").tabs();
});
  </script>
  {% endif %}
{% endblock %}

{% block toolbar %}
  {% set icon %}
    <img alt="MakeGood Icon" style="border-width: 0; vertical-align: middle; margin-right: 5px;" src="data:image/gif;base64," />
  {% endset %}
  {% include 'WebProfilerBundle:Profiler:toolbar_item.html.twig' with { 'link': profiler_url } %}
{% endblock %}

{% block menu %}
<span class="label">
  <span class="icon">
    <img src="{{ asset('bundles/piecemakegood/images/makegood_32.png') }}" alt="MakeGood Icon" />
    </span>
    <strong>TESTING</strong>
</span>
{% endblock %}

{% block panel %}
<div id="piecemakegood-notification"></div>
<div id="piecemakegood-status"></div>
<div id="piecemakegood-tabs">
  <ul>
    <li><a href="#piecemakegood-tabs-1">Control Panel</a></li>
    <li><a href="#piecemakegood-tabs-2">Console</a></li>
  </ul>
  <div id="piecemakegood-tabs-1">
    <div id="piecemakegood-controlpanel">
      <button id="piecemakegood-action-runalltests"></button>
    </div>
    <div id="piecemakegood-result">
      <div id="piecemakegood-progressbar" class="ui-progressbar">
        <span class="piecemakegood-progressbar-label"></span>
      </div>
      <div id="piecemakegood-counter">
        <span id="piecemakegood-counter-test">
          <span id="piecemakegood-counter-test-label"></span>
          <span id="piecemakegood-counter-test-value-current"></span>/<span id="piecemakegood-counter-test-value-all"></span>
        </span>
        <span id="piecemakegood-counter-pass">
          <img src="{{ asset('bundles/piecemakegood/images/counter_pass.png') }}" alt="MakeGood Icon" />
          <span id="piecemakegood-counter-pass-label"></span>
          <span id="piecemakegood-counter-pass-value"></span>
        </span>
        <span id="piecemakegood-counter-failure">
          <img src="{{ asset('bundles/piecemakegood/images/counter_failure.png') }}" alt="MakeGood Icon" />
          <span id="piecemakegood-counter-failure-label"></span>
          <span id="piecemakegood-counter-failure-value"></span>
        </span>
        <span id="piecemakegood-counter-error">
          <img src="{{ asset('bundles/piecemakegood/images/counter_error.png') }}" alt="MakeGood Icon" />
          <span id="piecemakegood-counter-error-label"></span>
          <span id="piecemakegood-counter-error-value"></span>
        </span>
      </div>
    </div>
  </div>
  <div id="piecemakegood-tabs-2">
    <div id="piecemakegood-console">
    </div>
  </div>
</div>
{% endblock %}
